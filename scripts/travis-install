if [[ "Darwin" = $(uname -s) && ${CXX} == "g++" ]]; then
  brew update
  brew tap homebrew/versions
  brew install gcc${VERSION/./}
fi

if [[ ! -z ${VERSION} ]]; then
  export CXX="${CXX}-${VERSION}" CC="${CC}-${VERSION}"
  echo CXX=${CXX}
  echo CC=${CC}
fi
